{
    "name": "GBA Scenic Route Env",
    "image": "ghcr.io/auberonedu/gba-scenic:0.2.0",
    // TODO: Move customizations to Dev Container Features
    "customizations": {
        "vscode": {
        "extensions": [
            "ms-vscode.cpptools-extension-pack",
            "ms-vscode.makefile-tools"
        ],
        "settings": {
            "C_Cpp.intelliSenseEngine": "default",
            "C_Cpp.default.compilerPath": "/opt/devkitpro/devkitARM/bin/arm-none-eabi-g++",
            "C_Cpp.default.cppStandard": "c++23",
            "C_Cpp.default.includePath": [
            "${workspaceFolder}/include",
            "${workspaceFolder}/build",
            "/opt/butano/butano/include",
            "/opt/butano/butano/hw/**/include",
            "/opt/butano/common/include"
            ],
            "C_Cpp.default.defines": [
            "__GBA__"
            ],
            "makefile.configureOnOpen": true,
            "files.associations": {
            "*.h": "cpp"
            },
            "editor.formatOnSave": true,
            "editor.rulers": [100],
            "terminal.integrated.defaultProfile.linux": "bash",
            "terminal.integrated.enablePersistentSessions": true,
            "terminal.integrated.persistentSessionReviveProcess": "onExit",
            "window.restoreWindows": "all",
            "workbench.editorAssociations": {
            "*.md": "vscode.markdown.preview.editor"
            }
        }
        }
    }
}